<!--2.Product details-->
<!DOCTYPE html>
<html>
<head>
  <title>Product Details</title>
  <style>
    div {
      border: 5px solid purple;
      width: 350px;
      padding: 15px;
      font-family: Arial;
    }
  </style>
</head>
<body>
  <div>
    <h3>Product Details</h3>
    Product Name: <input type="text" id="pname"><br><br>
    Unit Price: <input type="number" id="price"><br><br>
    Quantity: <input type="number" id="qty"><br><br>
    <button onclick="calculateTotal()">Get Total</button>
    <h4 id="result"></h4>
  </div>

  <script>
    function calculateTotal() {
      let name = document.getElementById("pname").value;
      let price = parseFloat(document.getElementById("price").value);
      let qty = parseInt(document.getElementById("qty").value);

      if (confirm("Do you want to calculate the total amount for " + name + "?")) {
        let total = price * qty;
        let discount = 0;

        if (qty > 30) discount = 0.20;
        else if (qty > 20) discount = 0.15;
        else if (qty > 10) discount = 0.10;

        total = total - (total * discount);
        document.getElementById("result").innerHTML = 
          "Total Amount : " + total.toFixed(2);
      } else {
        document.getElementById("result").innerHTML = "Calculation Cancelled!";
      }
    }
  </script>
</body>
</html>

