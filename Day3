<!-- 3. Meal Price â€“ Add Tip (10%) and Tax (8%) -->

<!DOCTYPE html>
<html>
<head>
  <title>Meal Cost Calculator</title>
  <style>
    div {
      border: 10px solid rgb(21, 128, 0);
      width: 500px;
      padding: 15px;
      font-family: Arial;
    
    }
  </style>
</head>
<body>
  <div>
    <h3>Meal Cost Calculator</h3>
    Base Cost: <input type="number" id="base"><br><br>
    <button onclick="calcMeal()">Get Total</button>
    <p id="output"></p>
  </div>

  <script>
    function calcMeal() {
      let base = parseFloat(document.getElementById("base").value);
      let tip = base * 0.10;
      let tax = base * 0.08;
      let total = base + tip + tax;
      total = Math.round(total);

      document.getElementById("output").innerHTML = 
        "Meal Base Cost : " + base.toFixed(2) + "<br>" +
        "Tip Amount : " + tip.toFixed(2) + "<br>" +
        "Tax Amount : " + tax.toFixed(2) + "<br>" +
        "Total Amount : " + total;
    }
  </script>
</body>
</html>
---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
<!-- 4. Functions for Average, Power, and Word Count -->
<!DOCTYPE html>
<html>
<head>
  <title>Functions Example</title>
  <style>
    div {
      border: 5px solid rgb(0, 106, 255);
      width: 350px;
      padding: 15px;
      margin-bottom: 20px;
      font-family: Arial;
      align-content: center;
    }
  </style>
</head>
<body>
  <div>
    <h3>Find Average</h3>
    Total Marks: <input type="number" id="marks"><br><br>
    No. of Subjects: <input type="number" id="subs"><br><br>
    <button onclick="findAverage()">Find Average</button>
    <p id="avg"></p>
  </div>

  <div>
    <h3>Find Power (x<sup>y</sup>)</h3>
    X: <input type="number" id="x"><br><br>  
    Y: <input type="number" id="y"><br><br>
    <button onclick="findPower()">Find Power</button>
    <p id="pow"></p>
  </div>

  <div>
    <h3>Word Count</h3>
    Enter Text: <input type="text" id="text" style="width:200px"><br><br>
    <button onclick="countWords()">Count Words</button>
    <p id="words"></p>
  </div>

  <script>
    function findAverage() {
      let marks = parseFloat(document.getElementById("marks").value);
      let subs = parseInt(document.getElementById("subs").value);
      let avg = marks / subs;
      document.getElementById("avg").innerHTML = "Average : " + avg.toFixed(2);
    }

    function findPower() {
      let x = parseFloat(document.getElementById("x").value);
      let y = parseFloat(document.getElementById("y").value);
      let result = Math.pow(x, y);
      document.getElementById("pow").innerHTML = "Result : " + result;
    }

    function countWords() {
      let text = document.getElementById("text").value.trim();
      let words = text === "" ? 0 : text.split(/\s+/).length;
      document.getElementById("words").innerHTML = "Word Count : " + words;
    }
  </script>
</body>
</html>
